<%- include ("../partials/head.ejs") %>

<div class="index-head">

    <div>
        <a class="btn btn-light" href="<%= baseUrl %>/new">Add Bird</a>
    </div>

    <h3 class="index-head-h3">Birds Index</h3>

    <div class="index-pic">
        <img class="log-icon" src="images/bird-icon.png" alt="Index pic">
    </div>

</div>

<div class="card-container" >
    <div class="logs-list">

            <% for (let bird of birds) { %>
                <div class="card" style="width: 15rem;">

                        <img class="card-img-top" src="<%= bird.imageURL %>" alt="Bird image">

                        <div class="card-body">

                            <a class="card-header" href="<%= baseUrl %>/<%= bird.id %>"><%= bird.name %></a>

                            <p class="card-subtitle mb-2 text-muted">Type: <%= bird.type %></p>

                            <p class="card-text">Conservation Status: <%= bird.conservationStatus %></p>

                            <p class="card-text">  
                                <% if (bird.native === true) { %>
                                    Native
                                <% } else { %>
                                    Not Native
                                <% } %>
                            </p>

                            <div class="card-footer">

                                <a class="btn btn-primary" href="<%= baseUrl %>/<%= bird.id %>/edit">Edit</a>

                                <form action="<%= baseUrl %>/<%= bird.id %>?_method=DELETE" method="post">
                                    <input class="btn btn-danger" type="submit" value="Delete" />
                                </form>

                            </div>

                        </div>
                </div>       

            <% } %>

    </div>
</div>

<%- include ("../partials/footer.ejs") %>