<%- include ("../partials/head.ejs") %>

<div class="bird-text">

    <h3 class="bird-name"><%= bird.name %></h3>

    <p>Type: <%= bird.type %></p>

    <p class="bird-conservation">Conservation Status: <%= bird.conservationStatus %></p>

    <p class="bird-native">  
        <% if (bird.native === true) { %>
            Native
        <% } else { %>
            Not Native
        <% } %>
    </p>

    <p class="bird-description"><%= bird.description %></p>

    <img src="<%= bird.imageURL %>" class="w-90" alt="Bird image"><br>

    <% if (returnId) { %>
        <a class="btn btn-secondary" href="/logs/<%= returnId %>">Back to Log</a>
    <% } else { %>
        <a class="btn btn-secondary" href="/birds">Back to Index</a>
    <% } %>

</div>

<%- include ("../partials/footer.ejs") %>