<%- include ("../partials/head.ejs") %>

<h1>New Bird</h1>

<div class="form-group">
    <form action="<%= baseUrl %>" method="post" enctype="multipart/form-data" >
      <label for="name">Name</label>
      <input type="name" class="form-control" name="name" required id="name" />
  
      <label for="type">Type</label>
      <input type="text" class="form-control" name="type" id="type" />

      <label for="conservationStatus">Conservation Status</label>
      <input type="text" class="form-control" name="conservationStatus" id="conservationStatus" />

      <label class="form-check-label" for="native">Native?</label>  
      <input class="form-check-input" type="checkbox" name="native" id="native" /><br>

      <label for="description">Description</label>
      <input type="textarea" class="form-control" name="description" id="description" />
      
      <label for="image">Image</label>
      <input class="form-control" name="image" id="image" type="file" /><br>
  
      <input class="btn btn-primary" type="submit" value="Create Bird" />
    </form>
  </div>

<a href="<%= baseUrl %>"> < Back to Index</a>

