<%- include ("./partials/head.ejs") %>
<h1>Add New Log</h1>

<div class="form-group">
    <form action="<%= baseUrl %>" method="post">
      <label for="name">Date</label>
      <input
        type="date"
        class="form-control"
        name="date"
        required
        id="date" />
  
      <label for="location">Location</label>
      <input
        type="text"
        class="form-control"
        name="location"
        required
        id="location" />

      <div class="bird-checks"
          <% for (let bird of birds) { %>
              <label for="<%= bird.id %>"><%= bird.name %></label>
              <input type="checkbox" name="birds" value="<%= bird.id %>" id="birds>
          <% } %>
      </div>

      <label for="notes">Notes</label>
      <input
        type="textarea"
        class="form-control"
        name="notes"
        id="notes" />
      
      <label for="imageURL">Image URL</label>
      <input
        type="text"
        class="form-control"
        name="imageURL"
        id="imageURL" />
  
      <input class="btn btn-primary" type="submit" value="Create Log" />
    </form>
  </div>

  <a href="<%= baseUrl %>"> < Back to Index</a>

<%- include ("./partials/footer.ejs") %>